{
  "variables": {
    "commit_sha": "{{env `GITHUB_SHA`}}",
    "hetzner_token": "{{env `HCLOUD_TOKEN`}}",
    "username": "charlieegan3"
  },
  "builders": [
    {
      "type": "hcloud",
      "server_name": "le-build-{{user `commit_sha`}}",
      "snapshot_name": "le-{{user `commit_sha`}}",
      "token": "{{ user `hetzner_token` }}",
      "image": "fedora-34",
      "location": "nbg1",
      "server_type": "cpx21",
      "ssh_username": "root",
      "ssh_keys": [
        "git@charlieegan3.com"
      ],
      "user_data": "#!/usr/bin/env bash\n\nupdate-crypto-policies --set LEGACY && systemctl restart sshd.service"
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "bash -c 'rm head.zip; zip -r head.zip .'"
    },
    {
      "type": "shell",
      "inline": [
        "mkdir -p /build"
      ]
    },
    {
      "type": "file",
      "source": "./head.zip",
      "destination": "/build/"
    },
    {
      "type": "shell",
      "script": "scripts/build.sh"
    }
  ]
}
